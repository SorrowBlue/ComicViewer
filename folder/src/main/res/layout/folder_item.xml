<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.sorrowblue.comicviewer.domain.entity.file.Book" />

        <variable
            name="file"
            type="com.sorrowblue.comicviewer.domain.entity.file.File" />
    </data>

    <com.google.android.material.card.MaterialCardView
        style="?attr/materialCardViewElevatedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardElevation="0dp"
        tools:showIn="@layout/folder_fragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/book_thumbnail"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="fitCenter"
                app:error="@{@drawable/ic_twotone_broken_image_24}"
                app:isVisible="@{file instanceof Book}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@{file instanceof Book ? file : null}"
                tools:srcCompat="@tools:sample/avatars"
                tools:visibility="gone" />

            <ImageView
                android:id="@+id/folder_thumbnail"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/bg_folder"
                android:backgroundTint="?attr/colorControlNormal"
                android:paddingStart="12dp"
                android:paddingTop="16dp"
                android:paddingEnd="12dp"
                android:paddingBottom="12dp"
                android:scaleType="fitCenter"
                app:error="@{@drawable/ic_twotone_book_24}"
                app:isVisible="@{!(file instanceof Book)}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="w,1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@{file instanceof Book ? null : file}"
                tools:srcCompat="@tools:sample/avatars" />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:max="@{file instanceof Book ? ((Book)file).totalPageCount : 0}"
                android:progress="@{file instanceof Book ? ((Book)file).lastPageRead : 0}"
                app:isVisible="@{file instanceof Book}"
                app:layout_constraintBottom_toTopOf="@+id/name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent" />

            <View
                android:id="@+id/back"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:alpha="0.85"
                android:background="?attr/colorSecondaryContainer"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/name" />

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:lines="2"
                android:padding="4dp"
                android:text="@{file.name}"
                android:textAppearance="?attr/textAppearanceLabelSmall"
                android:textColor="?attr/colorOnSecondaryContainer"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="[ロジロ] 彼とのセックスじゃイケないから…あたしのココに入れて欲しいの… 01.zip" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>

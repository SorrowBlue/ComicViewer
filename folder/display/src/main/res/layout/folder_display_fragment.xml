<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingTop="16dp"
    android:paddingEnd="16dp"
    tools:layout_gravity="end"
    tools:layout_width="200dp">

    <TextView
        android:id="@+id/view_type_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/folder_display_label_display"
        android:textAppearance="?attr/textAppearanceLabelLarge" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/view_type_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:selectionRequired="true"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/view_type_grid"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/folder_display_button_grid" />

        <com.google.android.material.chip.Chip
            android:id="@+id/view_type_list"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/folder_display_button_list" />
    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/span_count_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="サムネイルの大きさ"
        android:textAppearance="?attr/textAppearanceLabelLarge" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/colum_size_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:selectionRequired="true"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/colum_size_small"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小さい" />

        <com.google.android.material.chip.Chip
            android:id="@+id/colum_size_medium"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="普通" />

        <com.google.android.material.chip.Chip
            android:id="@+id/colum_size_large"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大きい" />
    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/sort_type_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/folder_display_label_order_by"
        android:textAppearance="?attr/textAppearanceLabelLarge" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/sort_type_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:selectionRequired="true"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/sort_type_name"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/folder_display_button_file_name"
            app:chipIcon="@drawable/ic_twotone_sort_by_alpha_24" />

        <com.google.android.material.chip.Chip
            android:id="@+id/sort_type_date"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/folder_display_button_date_and_time"
            app:chipIcon="@drawable/ic_twotone_calendar_today_24" />

        <com.google.android.material.chip.Chip
            android:id="@+id/sort_type_size"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/folder_display_button_file_size"
            app:chipIcon="@drawable/ic_twotone_sort_24" />

    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/order_type_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/folder_display_label_sort_order"
        android:textAppearance="?attr/textAppearanceLabelLarge" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/order_type_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:selectionRequired="true"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/order_type_asc"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/folder_display_button_asc"
            app:chipIcon="@drawable/sort_ascending" />

        <com.google.android.material.chip.Chip
            android:id="@+id/order_type_desc"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/folder_display_button_desc"
            app:chipIcon="@drawable/sort_descending" />
    </com.google.android.material.chip.ChipGroup>
</LinearLayout>

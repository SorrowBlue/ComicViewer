{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "prHourlyLimit": 0,
  "schedule": [
    "before 3am"
  ],
  "labels": [
    "type: :dependabot:dependencies",
    ":robot:renovate"
  ],
  "dependencyDashboardLabels": [
    ":robot:renovate"
  ],
  "packageRules": [
    {
      "groupName": "Android Gradle Plugin",
      "groupSlug": "android_gradle_plugin",
      "matchPackageNames": [
        "com.android.{/,}**",
        "!com.android.billingclient{/,}**"
      ]
    },
    {
      "groupName": "Kotlin",
      "groupSlug": "kotlin",
      "matchPackageNames": [
        "org.jetbrains.kotlin:{/,}**",
        "org.jetbrains.kotlin.{/,}**",
        "com.google.devtools.ksp{/,}**"
      ]
    },
    {
      "groupName": "Coil",
      "groupSlug": "coil",
      "matchPackageNames": [
        "io.coil-kt:coil{/,}**",
        "io.coil-kt:coil-base{/,}**"
      ]
    },
    {
      "groupName": "Hilt",
      "groupSlug": "androidx_hilt",
      "matchPackageNames": [
        "androidx.hilt:{/,}**"
      ]
    },
    {
      "groupName": "androidx.compose",
      "groupSlug": "androidx_compose",
      "matchPackageNames": [
        "androidx.compose{/,}**",
        "org.jetbrains.compose{/,}**"
      ]
    },
    {
      "groupName": "kotlinx.kover",
      "groupSlug": "kotlinx_kover",
      "matchPackageNames": [
        "org.jetbrains.kotlinx.kover{/,}**"
      ]
    },
    {
      "groupName": "androidx.test",
      "groupSlug": "androidx_test",
      "matchPackageNames": [
        "androidx.test{/,}**"
      ]
    },
    {
      "groupName": "io.coil-kt.coil3",
      "groupSlug": "io_coil-kt_coil3",
      "matchPackageNames": [
        "io.coil-kt.coil3{/,}**"
      ]
    },
    {
      "groupName": "com.sorrowblue.cmpdestinations",
      "groupSlug": "com.sorrowblue.cmpdestinations",
      "matchPackageNames": [
        "com.sorrowblue.cmpdestinations{/,}**"
      ]
    }
  ]
}

<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/init_fragment">
    <action
        android:id="@+id/action_global_settings_navigation"
        app:destination="@id/settings_navigation"
        app:launchSingleTop="true" />
    <fragment
        android:id="@+id/work_fragment"
        android:name="com.sorrowblue.comicviewer.app.WorkFragment"
        android:label="WorkFragment">
        <argument
            android:name="uuid"
            app:argType="string" />
        <deepLink
            android:id="@+id/deepLink"
            android:autoVerify="true"
            app:uri="comicviewer://comicviewer.sorrowblue.com/work?uuid={uuid}" />
    </fragment>
    <fragment
        android:id="@+id/auth_fragment"
        android:name="com.sorrowblue.comicviewer.app.AuthFragment"
        tools:layout="@layout/fragment_auth" />
    <include app:graph="@navigation/bookshelf" />
    <include app:graph="@navigation/favorite_list" />
    <include app:graph="@navigation/readlater" />

    <include app:graph="@navigation/favorite_add" />
    <include app:graph="@navigation/settings" />
    <include app:graph="@navigation/library" />
    <include app:graph="@navigation/file" />
    <include app:graph="@navigation/settings_feature" />
    <fragment
        android:id="@+id/init_fragment"
        android:name="com.sorrowblue.comicviewer.app.InitFragment" />
    <fragment
        android:id="@+id/tutorial_fragment"
        android:name="com.sorrowblue.comicviewer.app.tutorial.TutorialFragment"
        android:label="TutorialFragment" />
    <action
        android:id="@+id/action_global_auth"
        app:destination="@id/auth_fragment"
        app:launchSingleTop="true"
        app:popUpTo="@id/mobile_navigation" />
    <action
        android:id="@+id/action_global_tutorial"
        app:destination="@id/tutorial_fragment"
        app:launchSingleTop="true"
        app:popUpTo="@id/mobile_navigation" />
    <action
        android:id="@+id/action_global_bookshelf"
        app:destination="@id/bookshelf_navigation"
        app:launchSingleTop="true"
        app:popUpTo="@id/mobile_navigation" />
</navigation>


<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bookshelf_navigation"
    app:startDestination="@id/bookshelf_fragment">

    <framework-fragment
        android:id="@+id/bookshelf_fragment"
        android:name="com.sorrowblue.comicviewer.bookshelf.BookshelfFragment"
        android:label="BookshelfFragment"
        app:menu="@menu/bookshelf"
        tools:layout="@layout/bookshelf_fragment">
        <argument
            android:name="library"
            app:argType="com.sorrowblue.comicviewer.domain.model.library.Library" />
        <argument
            android:name="bookshelf"
            app:argType="com.sorrowblue.comicviewer.domain.model.file.Bookshelf"
            app:nullable="true"
            android:defaultValue="@null" />
        <action
            android:id="@+id/action_to_viewer"
            app:destination="@id/viewer" />
        <action
            android:id="@+id/action_bookshelf_fragment_self"
            app:destination="@id/bookshelf_fragment" />
        <action
            android:id="@+id/action_bookshelf_to_bookshelf_display"
            app:destination="@id/bookshelf_display_fragment" />
    </framework-fragment>
    <include app:graph="@navigation/viewer" />
    <dialog
        android:id="@+id/bookshelf_display_fragment"
        android:name="com.sorrowblue.comicviewer.bookshelf.display.BookshelfDisplayFragment"
        android:label="BookshelfDisplayFragment"
        tools:layout="@layout/bookshelf_fragment_sort" />
</navigation>

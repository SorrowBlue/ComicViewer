<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/library_navigation"
    app:startDestination="@id/library_list_fragment">

    <fragment
        android:id="@+id/library_list_fragment"
        android:name="com.sorrowblue.comicviewer.library.LibraryListFragment"
        android:label="ライブラリ"
        app:bottomNavVisible="true">
        <action
            android:id="@+id/action_library_list_to_dropbox_navigation"
            app:destination="@id/dropbox_navigation" />
        <action
            android:id="@+id/action_library_list_to_googledrive_navigation"
            app:destination="@id/googledrive" />
        <action
            android:id="@+id/action_library_list_to_box_navigation"
            app:destination="@id/box_navigation" />
        <action
            android:id="@+id/action_library_list_to_onedrive_navigation"
            app:destination="@id/onedrive" />
        <action
            android:id="@+id/action_library_list_to_history_navigation" />
    </fragment>
    <include-dynamic
        android:id="@+id/googledrive"
        app:graphPackage="${applicationId}.googledrive"
        app:graphResName="googledrive"
        app:moduleName="googledrive" />
    <include-dynamic
        android:id="@+id/onedrive"
        app:graphPackage="${applicationId}.onedrive"
        app:graphResName="onedrive"
        app:moduleName="onedrive" />
    <include-dynamic
        android:id="@+id/dropbox_navigation"
        app:graphPackage="${applicationId}.dropbox"
        app:graphResName="dropbox"
        app:moduleName="dropbox" />
    <include-dynamic
        android:id="@+id/box_navigation"
        app:graphPackage="${applicationId}.box"
        app:graphResName="box"
        app:moduleName="box" />

    <fragment
        android:id="@+id/box_oauth2_fragment"
        android:name="com.sorrowblue.comicviewer.library.box.oauth.BoxOauth2Fragment"
        android:label="Box">
        <argument
            android:name="state"
            app:argType="string" />
        <argument
            android:name="code"
            app:argType="string" />
        <deepLink
            android:id="@+id/boxDeeplink"
            android:autoVerify="true"
            app:uri="comicviewer.sorrowblue.com/box/oauth2?state={state}&amp;code={code}" />
    </fragment>
</navigation>

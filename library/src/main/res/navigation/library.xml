<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/library_navigation"
    app:startDestination="@id/library_fragment">

    <framework-fragment
        android:id="@+id/library_fragment"
        android:name="com.sorrowblue.comicviewer.library.LibraryFragment"
        android:label="ホーム"
        tools:layout="@layout/library_fragment">
        <action
            android:id="@+id/action_library_to_bookshelf_navigation"
            app:destination="@id/bookshelf_navigation" />
        <action
            android:id="@+id/action_library_to_management_editor_navigation"
            app:destination="@id/management_editor_navigation" />
        <action
            android:id="@+id/action_library_to_management_protocol_navigation"
            app:destination="@id/management_protocol_navigation" />
    </framework-fragment>
    <include app:graph="@navigation/bookshelf" />
    <include app:graph="@navigation/management_protocol" />
    <include app:graph="@navigation/management_editor" />
</navigation>
